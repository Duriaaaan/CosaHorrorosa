<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cosahorrosa">

    <!-- Definición del bloque <application> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CosaHorrosa">

        <!-- LoginActivity (pantalla de inicio de sesión) -->
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (pantalla principal) -->
        <activity android:name=".MainActivity" android:exported="false" />

        <!-- RegisterActivity (registro de nuevos usuarios) -->
        <activity android:name=".RegisterActivity" android:exported="false" />

        <!-- CartActivity (carrito de compras) -->
        <activity android:name=".CartActivity" android:exported="false" />

        <!-- PurchaseHistoryActivity (historial de compras) -->
        <activity android:name=".PurchaseHistoryActivity" android:exported="false" />

        <!-- MapActivity (pantalla de mapa) -->
        <activity android:name=".MapActivity" android:exported="false" />

        <activity android:name=".CatalogActivity" android:exported="false" />

    </application>

</manifest>
